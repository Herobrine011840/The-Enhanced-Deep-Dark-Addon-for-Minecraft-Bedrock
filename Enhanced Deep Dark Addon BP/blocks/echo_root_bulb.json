				"run_command": {
					"command": [
						"playsound item.bone_meal.use @a [r=10] ~ ~ ~",
						"particle minecraft:crop_growth_emitter ~ ~ ~",
						"summon xp_orb"
					]
				},
				"decrement_stack": {}
			}
		}
	}
